#!/usr/bin/env zsh

#compdef gt
###-begin-gt-completions-###
#
# yargs command completion script
#
# Installation: {{ brew_prefix }}/gt completion >> ~/.zshrc
#    or {{ brew_prefix }}/gt completion >> ~/.zprofile on OSX.
#
_gt_yargs_completions() {
	local reply
	local si=$IFS
	IFS=$'
' reply=($(COMP_CWORD="$((CURRENT - 1))" COMP_LINE="$BUFFER" COMP_POINT="$CURSOR" {{ brew_prefix }}/gt --get-yargs-completions "${words[@]}"))
	IFS=$si
	_describe 'values' reply
}
compdef _gt_yargs_completions gt
###-end-gt-completions-###
